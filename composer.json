{
    "name": "fozzyhosting/leaderssl-api-client",
    "description": "LeaderSSL API Client",
    "type": "library",
    "keywords": ["php", "leaderssl", "api"],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Fozzy\\LeaderSSL\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fozzy\\LeaderSSL\\Api\\Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Fozzy Dev",
            "email": "dev@fozzy.com",
            "homepage": "https://fozzy.com",
            "role": "Developer"
        }
    ],
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "require": {
        "php": "7.*||8.*",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.4",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "test": [
            "phpunit --no-coverage"
        ]
    },
    "scripts-descriptions": {
        "test": "Run PHPUnit tests cases without code coverage report"
    }
}
